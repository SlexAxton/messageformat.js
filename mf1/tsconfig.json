{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "~/*": ["../*"],
      "@messageformat/core": ["core/src/messageformat"],
      "@messageformat/core/compile-module": ["core/src/compile-module"],
      "@messageformat/date-skeleton": ["date-skeleton/src/index"],
      "@messageformat/number-skeleton": ["number-skeleton/src/index"],
      "@messageformat/parser": ["parser/src/parser"],
